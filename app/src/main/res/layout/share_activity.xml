<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybg">


    <Button
        android:id="@+id/shareButton"
        android:layout_width="360dp"
        android:layout_height="36dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/buttonbg"
        android:text="share"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="99dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/msgTextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_picture" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="7dp"
        android:text="Peter"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mailTextView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/mailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="100dp"
        android:text="Peter@gmail.com"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/msgTextview"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/msgTextview"
        android:layout_width="350dp"
        android:layout_height="90dp"

        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="269dp"
        android:background="@drawable/buttonbg"
        android:fontFamily="sans-serif-medium"
        android:text="Total Finished Quiz\n           12(times)"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/shareButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/shareTextView"
        android:layout_width="301dp"
        android:layout_height="68dp"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="157dp"
        android:fontFamily="sans-serif-medium"
        android:text="Let's elevate together with QuizApp! Share the fun!"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/shareButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgTextview"
        app:layout_constraintVertical_bias="0.591" />
</androidx.constraintlayout.widget.ConstraintLayout>