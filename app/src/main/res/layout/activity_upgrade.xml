<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybg">


    <TextView
        android:id="@+id/upgradeTextView"
        android:layout_width="223dp"
        android:layout_height="37dp"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif-medium"
        android:text="Upgrade Experience"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plan1Button"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/buttonbg"
        android:text="Plan1- Purchase"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upgradeTextView" />

    <Button
        android:id="@+id/plan2Button"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/buttonbg"
        android:text="Plan2- Purchase"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plan1Button" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/buttonbg"
        android:text="Back to home"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plan2Button" />


</androidx.constraintlayout.widget.ConstraintLayout>